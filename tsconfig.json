{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "noEmitOnError": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules"
  ]
  }